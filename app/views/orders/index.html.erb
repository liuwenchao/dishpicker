<h1>Listing orders</h1>

<table>
  <tr>
    <th>IP address</th>
    <th>Amount</th>
    <th>Delivery</th>
    <th>Payment</th>
    <th>Notes</th>
    <th>User</th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.ip %></td>
    <td><%= order.amount %></td>
    <td><%= order.delivery %></td>
    <td><%= order.payment %></td>
    <td><%= order.notes %></td>
    <td><%= order.user %></td>
    <td><%= link_to 'Show', order %></td>
  </tr>
<% end %>
</table>

