<h1>Listing stores</h1>

<ul class="listview">
<% @stores.each do |store| %>
  <li>
    <a href="<%= url_for store %>">
      <%= image_tag store.photo.url(:small) %>
      <h2><%= store.name %></h2>
      <p>Address: <%= store.address %>, <%= store.city %>, <%= store.state %> <%= store.zip %>, <%= store.country %></p>
      <p>Tel: <%= store.tel %> Hours: <%= store.hours %> Manager: <%= store.user %></p>
      <div class="ui-li-count"><%= store.dishes.count %></div>
    </a>
    <a href="#">
      Add to my favorates
    </a>
  </li>
<% end %>
</ul>

<br />
<% if can? :create, Store %> 
<%= link_to 'New Store', new_store_path, 'class'=>'inline' %>
<% end %>

